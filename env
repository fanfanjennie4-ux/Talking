cat > .env.example <<EOF
# Port du serveur
PORT=5000

# URL côté client
CLIENT_URL=http://localhost:5000

# URI MongoDB (remplacer <username>, <password>, <cluster> et <database>)
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# Compte propriétaire du chat
OWNER_EMAIL=owner@example.com
OWNER_PASSWORD=changeme123

# Bots
BOT_NAY_NAME=Nay
BOT_NAY_PREFIX=!

BOT_DRISE_NAME=Drise
BOT_VIEW_NAME=View

# Salons par défaut
ROOMS_DEFAULT=Accueil,Jeux,Musique,Créations,Annonce,Suggestions,NSFW,VIP,Modération,Aide

# Autres configurations
MAX_MESSAGE_LENGTH=1000
USERNAME_UNIQUE=true
NOTIFICATION_SOUND=true
EOF
